{
   "manifest_version": 2,
   "name": "HTML5 Video Manager",
   "short_name": "VideoManager",
   "version": "2.0.0",
   "description": "You can control speed,volume, current time and AB loop of videos with shortcut keys.",
   "homepage_url": "https://github.com/eskmemorial/HTML5VideoManager",
   "icons": {
      "64": "img/icon64.png"
   },
   "permissions": [
      "storage",
      "tabs"
   ],
   "options_page": "options.html",
   "browser_action": {
      "default_icon": {
         "64": "img/icon64.png"
      },
      "default_popup": "popup.html"
   },
   "content_scripts": [
      {
         "all_frames": true,
         "match_about_blank": true,
         "js": [
            "settings.js",
            "main.js",
            "Video.js"
         ],
         "css": [
            "controller.css"
         ],
         "matches": [
            "https://*/*",
            "http://*/*",
            "file://*/*"
         ],
         "run_at": "document_start"
      }
   ],
   "background": {
      "scripts": [
         "background.js"
      ],
      "presistent": false
   },
   "web_accessible_resources": [
      "*.png",
      "*.svg"
   ]
}