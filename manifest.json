{
   "manifest_version": 2,
   "name": "Html5 Video Manager",
   "short_name": "VideoManager",
   "version": "0.0.0",
   "description": "You can manage playback rate, volume and current time of videos with shortcut keys.",
   "homepage_url": "https://github.com/eskmemorial/Html5VideoManager",
   "icons": {
      "64": "icon64.png"
   },
   "permissions": [
      "storage"
   ],
   "options_page": "options.html",
   "browser_action": {
      "default_icon": {
         "64": "icon64.png"
      },
      "default_popup": "popup.html"
   },
   "content_scripts": [
      {
         "all_frames": true,
         "js": [
            "actions.js",
            "controller.js",
            "main.js"
         ],
         "matches": [
            "http://*/*",
            "https://*/*",
            "file://*/*"
         ],
         "run_at": "document_end"
      }
   ]
}